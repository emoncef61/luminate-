generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
  relationMode= "prisma"
}

enum Role{
  USER
  ADMIN
}

model User{
  id String @id @default(uuid())
  name String 
  email String @unique
  picture String @db.Text
  role Role @default(USER) 

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
